{
  "compilerOptions": {
    "lib": [
      "ES2020",
      "ES2015",
      "dom"
    ],                      
    "target": "ES2020",                     
    "module": "CommonJS",                      
    "outDir": "./dist",                 
    "strict": true,                       
    "esModuleInterop": true,           
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "declaration": true,
    "types": ["node", "@types/bcrypt"],
  },
  "include": ["src/**/*.ts"],                      
  "exclude": ["node_modules"]

}